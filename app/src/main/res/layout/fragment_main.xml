<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="#E5E5E5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.presentetion.Fragment.MainFragment"
    android:padding="16dp">


<LinearLayout
    android:background="#E5E5E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        android:text="Quiz"
        android:layout_marginStart="18dp"
        android:layout_marginTop="31.6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ad_tut"
        android:src="@drawable/ad_tut"
        android:layout_marginTop="90.72dp"
        android:layout_width="50dp"
        android:layout_height="75dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="71.16dp"
            android:id="@+id/amount"
            android:text="Questions amount :"
            android:layout_marginTop="37.79dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="37dp"
            android:layout_marginStart="12dp"
            android:id="@+id/sd_amount"
            android:text="5"
            app:layout_constraintTop_toBottomOf="@+id/ad_tut"
            app:layout_constraintStart_toEndOf="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <SeekBar
        android:thumb="@drawable/oval"
        android:scaleY="1"
        android:scaleX="1"
        android:progressTint="#BE52F2"
        android:layout_marginTop="1.76dp"
        android:id="@+id/seekbar"
        android:progress="5"
        android:max="10"
        android:layout_marginStart="60dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/category_1"
        android:layout_marginStart="71.16dp"
        android:layout_marginTop="21.7dp"
        android:textStyle="normal"
        android:textSize="12dp"
        android:text="Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="4.13dp"
        android:layout_marginStart="70.59dp"
        app:layout_constraintTop_toBottomOf="@+id/category_1"
        android:layout_width="240dp"
        android:layout_height="48dp"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/difficul_2"
        android:layout_marginTop="6.42dp"
        android:layout_marginStart="71.16dp"
        android:textSize="12dp"
        android:textStyle="normal"
        android:text="Difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinner_2"
        android:layout_marginTop="4.13dp"
        android:layout_marginStart="69.75dp"
        android:layout_width="240dp"
        android:layout_height="48dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:layout_marginTop="61.65dp"
        app:cornerRadius="6dp"
        android:backgroundTint="#6979F8"
        android:text="Start"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="55dp"/>


</LinearLayout>

</FrameLayout>