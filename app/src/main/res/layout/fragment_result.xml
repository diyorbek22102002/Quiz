<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.presentetion.Fragment.ResultFragment">
<LinearLayout
    android:background="#E5E5E5"
    android:orientation="vertical"
    android:id="@+id/Result_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="17sp"
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/nike"
        android:background="@drawable/done2"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:backgroundTint="#E5E5E5"
        android:layout_gravity="center"
        app:cardElevation="2dp"
        android:id="@+id/kontenor"
        android:layout_marginTop="52dp"
        android:layout_width="342dp"
        android:layout_height="174dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="22dp"
            android:layout_marginStart="104dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp">
            <TextView
                android:textColor="@color/black"
                android:layout_marginStart="104dp"
                android:id="@+id/mixed"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Category:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/cat"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Boocks"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="81dp"
    android:layout_marginStart="112dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/Correct_1"
        android:text="Correct answers"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"
        android:id="@+id/question_now"
        android:text="6"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Correct_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/q1234"
        android:textSize="15dp"
        android:text="/"
        android:layout_marginStart="13dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/Correct_1"
        app:layout_constraintStart_toStartOf="@+id/question_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/black"
        android:id="@+id/question_max"
        android:text="8"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/Correct_1"
        app:layout_constraintStart_toStartOf="@+id/q1234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>




         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_marginTop="81dp"
             android:layout_marginStart="26dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:textColor="@color/black"
                 android:id="@+id/def"
                 android:textStyle="normal"
                 android:text="Difficulty"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:textSize="15dp"
                 android:layout_marginStart="12dp"
                 app:layout_constraintStart_toStartOf="parent"
                 android:textColor="@color/black"
                 android:layout_marginTop="4dp"
                 android:id="@+id/dif"
                 android:textStyle="normal"
                 android:text="All"
                 app:layout_constraintTop_toBottomOf="@id/def"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>


         </androidx.constraintlayout.widget.ConstraintLayout>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="81dp"
    android:layout_marginStart="262dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/result2"
        android:textStyle="normal"
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:id="@+id/percent"
        android:text="%"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:id="@+id/percentnumber"
        android:text="69"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/percent"
        app:layout_constraintTop_toBottomOf="@id/result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:id="@+id/finish"
        android:textColor="@color/white"
        android:text="Finish"
        android:backgroundTint="#4CE2A7"
        app:cornerRadius="25dp"
        android:layout_marginTop="82dp"
        android:layout_width="100dp"
        android:layout_height="60dp"/>


</LinearLayout>


</FrameLayout>